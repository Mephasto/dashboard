extends layout
block main
	div.row
		div.col-md-12
			br
			h1 Contacto
			hr
	div.row.contact
		div.col-md-6
			article.form
				h4
					| Envíe un mensaje...
				form(role="form", data-toggle="validator", id="contact-form")
					div.form-group
						label(for="input_email") Email
						input(type="email", id="input_email", placeholder="Email").form-control
					div.form-group
						label(for="input_name") Nombre
						input(type="text", id="input_name", placeholder="Nombre").form-control
					div.form-group
						label(for="input_empresa") Empresa
						input(type="text", id="input_empresa", placeholder="Empresa").form-control
					div.form-group
						label(for="input_mensaje") Mensaje
						textarea(type="textarea", id="input_mensaje", placeholder="Mensaje").form-control.textarea
					div.form-group
						button(type="submit", class="btn btn-default") Submit

		div.col-md-6
			article.bg
				h1 
					span(title="Teléfono")
						| &nbsp;&nbsp;
						i(class="fa fa-volume-control-phone", aria-hidden="true")
						| &nbsp;&nbsp;
						em (+54) 11 
						| 4590-2295&nbsp;
					br
					br
					span(title="Fax")
						| &nbsp;&nbsp;
						i(class="fa fa-file-text", aria-hidden="true")
						| &nbsp;&nbsp;
						em (+54) 11 
						| 4590-2201&nbsp;
						fa-file-text
					br
					br
					span(title="Email")
						| &nbsp;&nbsp;
						i(class="fa fa-envelope", aria-hidden="true")
						| &nbsp;&nbsp;
						| info@itpartner.com.ar&nbsp;
